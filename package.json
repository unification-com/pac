{
  "name": "pac",
  "version": "1.0.0",
  "description": "Public Accountability Chain",
  "main": "src/index.js",
  "scripts": {
    "develop-daemon-data": "nodemon --ignore './data/' --ignore './src/ui/' --ignore './src/db_utils/' --exec babel-node -- src/daemon data",
    "develop-daemon-beacon": "nodemon --ignore './data/' --ignore './src/ui/' --ignore './src/db_utils/' --exec babel-node -- src/daemon beacon",
    "develop-daemon-backup": "nodemon --ignore './data/' --ignore './src/ui/' --ignore './src/db_utils/' --exec babel-node -- src/daemon backup",
    "develop-daemon-merkle": "nodemon --ignore './data/' --ignore './src/ui/' --ignore './src/db_utils/' --exec babel-node -- src/daemon merkle",
    "test-daemon": "mocha --require babel-core/register",
    "build-daemon": "rimraf lib && babel src/daemon -d lib/daemon && babel src/common -d lib/common && babel src/db_utils -d lib/db_utils",
    "start-daemon-data": "node lib/daemon data",
    "start-daemon-beacon": "node lib/daemon beacon",
    "start-daemon-backup": "node lib/daemon backup",
    "start-daemon-merkle": "node lib/daemon merkle",
    "lint-daemon": "eslint src/daemon",
    "develop-ui": "next dev src/ui",
    "build-ui": "next build src/ui",
    "start-ui": "next start src/ui",
    "start-dev-stack": "npm run develop-daemon-data & npm run develop-ui"
  },
  "author": "Codegnosis",
  "license": "Apache-2.0",
  "dependencies": {
    "@unification-com/und-js": "^1.7.1",
    "assert": "^2.0.0",
    "axios": "^0.19.2",
    "bson-objectid": "^1.3.1",
    "classnames": "^2.2.6",
    "csv": "^5.3.2",
    "date-fns": "^2.14.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fs": "0.0.1-security",
    "install": "^0.13.0",
    "ipfs": "^0.47.0",
    "isomorphic-unfetch": "^3.0.0",
    "jsdom": "^16.2.2",
    "lodash": "^4.17.15",
    "merkle-tree": "^1.0.5",
    "mongodb": "^3.5.9",
    "next": "^9.4.4",
    "next-connect": "^0.7.1",
    "node-fetch": "^2.6.0",
    "npm": "^6.14.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "tar": "^6.0.2",
    "us-state-codes": "^1.1.2",
    "xlsx": "^0.16.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.10.3",
    "eslint": "^7.3.0",
    "mocha": "^7.2.0",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2"
  }
}
